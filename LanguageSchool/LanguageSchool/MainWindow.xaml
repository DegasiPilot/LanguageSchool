<Window x:Class="LanguageSchool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageSchool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFE7FABF">
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="192*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Images/school_logo.png" />
        <TextBlock Grid.ColumnSpan="2" FontSize="24" Height="34" Width="248">Школа языков "Лерн"</TextBlock>
        <StackPanel Margin="0,50,0,0" Grid.RowSpan="2">
            <Button Height="30" Width="80" Margin="0 15" Click="UslugiButton_Click">Список услуг</Button>
            <Button Height="30" Width="60" Margin="0 10" x:Name="BackBtn">Назад</Button>
            <Button Height="30" Width="60" x:Name="ForwardBtn">Вперед</Button>
        </StackPanel>
        <Frame Grid.Column="1" Margin="0,50,0,0" Grid.RowSpan="2"/>
    </Grid>
</Window>
